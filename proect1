# Створюємо папку
 
mkdir мій_перший_проект
cd мій_перший_проект
 
# Ініціалізуємо Git
 
git init
 # Створюємо README файл
 
echo "# Мій перший проект" > README.md
echo "Це мій перший проект з Git!" >> README.md
 
# Створюємо простий HTML файл
 
cat > index.html << 'EOF'
<!DOCTYPE html>
<html>
<head>
    <title>Мій проект</title>
</head>
<body>
    <h1>Привіт, світ!</h1>
    <p>Це мій перший веб-сайт</p>
</body>
</html>
EOF
# Додаємо всі файли
 
git add .
 
# Створюємо перший коміт
 
git commit -m "Початкова версія проекту"
# Додаємо новий контент до HTML
 
echo "    <p>Додано новий абзац!</p>" >> index.html
 
# Додаємо файл CSS
 
echo "body { font-family: Arial; }" > style.css
# Додаємо зміни
 
git add .
 
# Створюємо коміт
 
git commit -m "Додано стилі та новий контент"
